{% extends 'base/section.twig' %}

{% set title = 'Elenco società' %}
{% set subtitle = 'La lista è aggiornata ogni anno' %}

{% block section %}

    <div class="columns">
        {% for region in regions %}
            <div class="column">
                <div class="card">
                    <div class="card-content">
                        <p class="title">
                            {{ region.name }}
                        </p>
                        <p class="subtitle">
                            Jeff Atwood
                        </p>
                    </div>
                    <footer class="card-footer">
                        <p class="card-footer-item">
                            <span>
                                View on <a href="">Twitter</a>
                            </span>
                        </p>
                        <p class="card-footer-item">
                            <span>
                                Share on <a href="">Facebook</a>
                            </span>
                        </p>
                    </footer>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
