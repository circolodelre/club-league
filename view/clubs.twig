{% extends 'base/section.twig' %}

{% set title = 'Elenco società' %}
{% set subtitle = 'La lista è aggiornata ogni anno' %}

{% block section %}

    <div class="columns is-multiline">
        {% for region in regions %}
            <div class="column is-one-third">
                <div class="card full-height">
                    <div class="card-content">
                        <p class="title">
                            {{ region.name }}
                        </p>
                        <p class="subtitle">
                            Jeff Atwood
                        </p>
                    </div>
                    <footer class="card-footer">
                        <p class="card-footer-item">
                            <span>
                                <a href="/clubs/{{ region.slug }}">Elenco</a>
                            </span>
                        </p>
                        <p class="card-footer-item">
                            <span>
                                <a href="/ranking/{{ region.slug }}">Classifica</a>
                            </span>
                        </p>
                    </footer>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
